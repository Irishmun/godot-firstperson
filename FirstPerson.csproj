<Project Sdk="Godot.NET.Sdk/4.3.0">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <TargetFramework Condition=" '$(GodotTargetPlatform)' == 'android' ">net7.0</TargetFramework>
    <TargetFramework Condition=" '$(GodotTargetPlatform)' == 'ios' ">net8.0</TargetFramework>
    <EnableDynamicLoading>true</EnableDynamicLoading>
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
  </PropertyGroup>
	<PropertyGroup>
		<DefineConstants
		  Condition="'$(Configuration)'!='ExportRelease' And
        $(DefineConstants.Contains('GODOT_PC'))">$(DefineConstants);IMGUI</DefineConstants>
	</PropertyGroup>
	<Choose>
		<When Condition="$(DefineConstants.Contains('IMGUI'))">
			<ItemGroup>
				<PackageReference Include="ImGui.NET" Version="1.91.0.1" />
			</ItemGroup>
		</When>
		<Otherwise>
			<ItemGroup>
				<Compile Remove="addons/imgui-godot/**" />
			</ItemGroup>
		</Otherwise>
	</Choose>
  <ItemGroup>
    <Folder Include="prefab\entities\" />
  </ItemGroup>
</Project>